                <div class="section-header">
                    <h2>Adding New Quests</h2>
                </div>
                <div class="quest-forms">
                    <div class="quest-form-card">
                        <input type="text" placeholder="Quest name" class="quest-title-input">
                        <textarea placeholder="Description" class="quest-description"></textarea>
                        <div class="quest-options">
                            <button class="btn btn-option"><i class="fas fa-calendar"></i> Date</button>
                            <button class="btn btn-option"><i class="fas fa-flag"></i> Priority</button>
                        </div>
                        <div class="quest-actions">
                            <select class="form-select">
                                <option>Inbox</option>
                                <option>Today</option>
                                <option>Main quests</option>
                                <option>Side quests</option>
                                <option>Mini quests</option>
                            </select>
                            <button class="btn btn-cancel">Cancel</button>
                            <button class="btn btn-begin-quest">Begin quest <i class="fas fa-times"></i></button>
                        </div>
                    </div>
                    <div class="quest-form-card">
                        <input type="text" placeholder="Quest name" class="quest-title-input">
                        <textarea placeholder="Description" class="quest-description"></textarea>
                        <div class="quest-options">
                            <button class="btn btn-option"><i class="fas fa-calendar"></i> Date</button>
                            <button class="btn btn-option"><i class="fas fa-flag"></i> Priority</button>
                        </div>
                        <div class="quest-actions">
                            <select class="form-select">
                                <option>Inbox</option>
                            </select>
                            <button class="btn btn-cancel">Cancel</button>
                            <button class="btn btn-begin-quest">Begin quest <i class="fas fa-times"></i></button>
                        </div>
                    </div>
                </div>
                <button class="btn btn-add-quest" onclick="addQuestForm()">
                    <i class="fas fa-plus"></i> Add a quest
                </button>
            </div>

            <div id="inbox-section" class="content-section">
                <div class="section-header">
                    <h2>Inbox</h2>
                </div>
                <div class="empty-state">
                    <div class="empty-illustration">
                        <div class="character-celebration"></div>
                    </div>
