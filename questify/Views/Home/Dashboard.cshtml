@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="dashboard-container">
        <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <!-- User Profile -->
            <div class="user-profile">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-info">
                    <span class="username"></span>
                    <div class="level-bar">
                        <div class="level-progress"></div>
                    </div>
                    <span class="level">LVL 1</span>
                </div>
                <div class="user-actions">
                    <iconify-icon icon="material-symbols:notifications-rounded"></iconify-icon>
                    <iconify-icon icon="mdi:cog-outline"></iconify-icon>
                    <iconify-icon icon="mdi:logout" onclick="logout()"></iconify-icon>
                </div>
            </div>

            <div class="nav-item active" onclick="showSection('begin-quest')">
                <iconify-icon icon="twemoji:crossed-swords" ></iconify-icon>
                <span>Begin new quest</span>
                <i class="fas fa-plus-circle add-icon"></i>
            </div>

            <!-- Search - converted to nav-item for alignment -->
            <div class="nav-item" onclick="openPopup()">
                <iconify-icon icon="mdi:magnify"></iconify-icon>
                <span>Search</span>
            </div>
            <!-- Popup -->
            <div class="popup-overlay" id="popupOverlay">
                <div class="popup">
                    <button class="close-btn" onclick="closePopup()">&times;</button>
                    <h2>What are you looking for?</h2>
                    <input
                    type="text"
                    class="search-input"
                    placeholder="Search for a task"
                    />

                    <ul>
                    <li><iconify-icon icon="twemoji:clipboard" width="24" height="24"></iconify-icon> Go to Inbox</li>
                    <li><iconify-icon icon="mdi:calendar-today" width="24" height="24"></iconify-icon> Go to Today</li>
                    <li><iconify-icon icon="mdi:check-circle-outline" width="24" height="24"></iconify-icon> Go to My Quests</li>
                    <li><iconify-icon icon="mdi:account-group-outline" width="24" height="24"></iconify-icon> Go to My Guilds</li>
                    </ul>
                </div>
            </div>

            <!-- Script -->
            <script>
                function openPopup() {
                document.getElementById('popupOverlay').style.display = 'flex';
                }

                function closePopup() {
                document.getElementById('popupOverlay').style.display = 'none';
                }
            </script>

            <!-- Other nav items -->
            <div class="nav-item" onclick="showSection('inbox')">
                <i class="fas fa-inbox"></i>
                <span>Inbox</span>
                <span class="badge">24</span>
            </div>
            <div class="nav-item" onclick="showSection('today')">
                <i class="fas fa-calendar-day"></i>
                <span>Today</span>
                <span class="badge">2</span>
            </div>
            </nav>

                <div class="nav-section">
                    <h6>My Quests</h6>
                    <div class="nav-item" onclick="showSection('main-quests')">
                        <i class="fas fa-star main-quest-icon"></i>
                        <span>Main quests</span>
                        <span class="badge">4</span>
                    </div>
                    <div class="nav-item" onclick="showSection('side-quests')">
                        <i class="fas fa-star side-quest-icon"></i>
                        <span>Side quests</span>
                        <span class="badge">8</span>
                    </div>
                    <div class="nav-item" onclick="showSection('mini-quests')">
                        <i class="fas fa-star mini-quest-icon"></i>
                        <span>Mini quests</span>
                        <span class="badge">3</span>
                    </div>
                </div>

                <div class="nav-section">
                    <h6>My Guilds</h6>
                    <div class="nav-item" onclick="showSection('join-guild')">
                        <i class="fas fa-users"></i>
                        <span>Join/create a new guild</span>
                        <i class="fas fa-plus-circle add-icon"></i>
                    </div>
                    <div class="nav-item guild-item">
                        <i class="fas fa-shield-alt faerie-court"></i>
                        <span>Faerie Court</span>
                        <div class="guild-status active"></div>
                    </div>
                    <div class="nav-item guild-item">
                        <i class="fas fa-shield-alt chrysos-heirs"></i>
                        <span>Chrysos Heirs</span>
                        <div class="guild-status active"></div>
                    </div>
                    <div class="nav-item guild-item">
                        <i class="fas fa-shield-alt hexenzirkel"></i>
                        <span>Hexenzirkel</span>
                    </div>
                </div>
            </nav>

            <!-- Bottom Profile -->
            <div class="bottom-profile">
                <div class="profile-avatar">
                    <div class="sword-icon"></div>
                </div>
                <div class="profile-info">
                    <h6>Hi, Nem</h6>
                    <p>Every day is an adventure. Make the most out of it.</p>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Background Elements -->
            <div class="content-bg">
                <div class="cloud cloud-1"></div>
                <div class="cloud cloud-2"></div>
                <div class="cloud cloud-3"></div>
                <div class="sun"></div>
                <div class="bird bird-1"></div>
                <div class="bird bird-2"></div>
                <div class="tree tree-1"></div>
                <div class="tree tree-2"></div>
                <div class="flower flower-1"></div>
                <div class="flower flower-2"></div>
                <div class="fox"></div>
            </div>

            <!-- Content Sections -->
